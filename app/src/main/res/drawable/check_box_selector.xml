<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_checked="true">
        <shape>
            <solid android:color="#F2F2F2"/>
            <corners android:radius="6dp"/>
            <padding android:top="4dp" android:bottom="6dp" android:left="10dp" android:right="10dp"/>
            <stroke android:width="1dp" android:color="#727272"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <solid android:color="#F2F2F2"/>
            <corners android:radius="6dp"/>
            <!--<padding android:top="2dp" android:bottom="3dp" android:left="5dp" android:right="5dp"/>-->
            <padding android:top="4dp" android:bottom="6dp" android:left="10dp" android:right="10dp"/>
        </shape>
    </item>
</selector>